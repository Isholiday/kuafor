@model backend.Models.Salon

@{
  ViewData["Title"] = "Delete Salon";
}

<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-8">
        <div class="card" style="border-radius: 1rem; background-color: #424242;">
          <div class="card-body p-4 text-light">
            <h4 class="mb-4 text-center" style="letter-spacing: 1px; color: #EB975E;">
              Are you sure you want to delete this salon?
            </h4>
            <div class="mb-4">
              <strong>Name:</strong> @Model.Name <br/>
              <strong>Address:</strong> @Model.Address <br/>
              <strong>Phone:</strong> @Model.PhoneNumber <br/>
              <strong>Email:</strong> @Model.Email <br/>
              <strong>Operating Hours:</strong> @Model.OpeningTime.ToString("hh\\:mm") -
              @Model.ClosingTime.ToString("hh\\:mm")
            </div>

            <div class="text-center">
              <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id"/>
                <button type="submit" class="btn btn-success btn-lg w-100 mt-1">Yes, Delete</button>
              </form>
              <a asp-action="Index" class="btn btn-danger btn-lg w-100 mt-2">Cancel</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
