@model IEnumerable<backend.Models.Salon>

@{
  ViewData["Title"] = "Manage Salons";
  Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<h1 class="text-center mt-3" style="color: #EB975E;">Salons</h1>

<div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
  <table class="table table-bordered text-center text-light mt-5 fs-5" style="width: 80%; margin: 0 auto;">
    <thead style="background-color: #424242;">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Operating Hours</th>
      <th>Operations</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any()) {
      @foreach (var item in Model) {
        <tr>
          <td>@item.Name</td>
          <td>@item.Address</td>
          <td>@item.PhoneNumber</td>
          <td>@item.Email</td>
          <td>@item.OpeningTime.ToString("hh\\:mm") - @item.ClosingTime.ToString("hh\\:mm")</td>
          <td>
            <a class="btn btn-primary mt-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            <a class="btn btn-danger mt-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
          </td>
        </tr>
      }
    }
    else {
      <tr>
        <td colspan="6" class="text-center">No salons found.</td>
      </tr>
    }
    </tbody>
  </table>
</div>

<p class="text-center mt-5">
  <a asp-action="Create" class="btn btn-lg" style="background-color: #EB975E;">Create New</a>
</p>
