<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"]</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/backend.styles.css" asp-append-version="true"/>
</head>

<body>
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav class="col-2 p-3 text-light sidebar d-none d-lg-flex flex-column justify-content-center"
         style="border-radius: 1rem; background-color: #424242; min-height: 100vh;">
      <h4 class="mb-4 text-center fs-4 fs-md-3 fs-lg-2" style="color: #EB975E;">Dashboard</h4>
      <ul class="nav flex-column d-flex justify-content-center" style="flex-grow: 1;">
        <li class="nav-item mb-3">
          <a class="nav-link text-light font-weight-bold fs-6 fs-md-5 fs-lg-4 px-3 py-2 rounded-3 border border-light d-flex justify-content-center align-items-center"
             asp-controller="Dashboard" asp-action="AdminDashboard">Revenue Reports</a>
        </li>
        <li class="nav-item mb-3">
          <a class="nav-link text-light font-weight-bold fs-6 fs-md-5 fs-lg-4 px-3 py-2 rounded-3 border border-light d-flex justify-content-center align-items-center"
             asp-controller="Salon" asp-action="Index">Manage Salons</a>
        </li>
        <li class="nav-item mb-3">
          <a class="nav-link text-light font-weight-bold fs-6 fs-md-5 fs-lg-4 px-3 py-2 rounded-3 border border-light d-flex justify-content-center align-items-center"
             asp-controller="Service" asp-action="Index">Manage Services</a>
        </li>
        <li class="nav-item mb-3">
          <a class="nav-link text-light font-weight-bold fs-6 fs-md-5 fs-lg-4 px-3 py-2 rounded-3 border border-light d-flex justify-content-center align-items-center"
             asp-controller="Employee" asp-action="Index">Manage Employees</a>
        </li>
        <li class="nav-item mb-3">
          <a class="nav-link text-light font-weight-bold fs-6 fs-md-5 fs-lg-4 px-3 py-2 rounded-3 border border-light d-flex justify-content-center align-items-center"
             asp-controller="User" asp-action="Index">Manage Users</a>
        </li>
      </ul>
      <div class="mt-auto text-center">
        <form asp-controller="Account" asp-action="Logout" method="post">
          <button class="btn btn-lg w-100 fs-6 fs-md-5 fs-lg-4" style="background-color: #EB975E;">Logout</button>
        </form>
      </div>
    </nav>

    <!-- Mobile Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark d-lg-none" style="background-color: #424242; z-index: 1050;">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mobileMenu"
                aria-controls="mobileMenu" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" style="color: #EB975E;">Dashboard</a>
        <div class="collapse navbar-collapse" id="mobileMenu">
          <ul class="navbar-nav flex-column mt-3">
            <li class="nav-item">
              <a class="nav-link text-light" asp-controller="Dashboard" asp-action="AdminDashboard">Revenue
                Reports</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" asp-controller="Salon" asp-action="Index">Manage Salons</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" asp-controller="Service" asp-action="Index">Manage Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" asp-controller="Employee" asp-action="Index">Manage Employees</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" asp-controller="User" asp-action="Index">Manage Users</a>
            </li>
            <li class="nav-item mt-3">
              <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-lg w-100" style="background-color: #EB975E;">Logout</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="col">
      <main role="main" style="padding-top: 80px;">
        @RenderBody()
      </main>
      @if (TempData["SuccessMessage"] != null) {
        <div class="alert alert-success alert-dismissible fade show mt-5 w-50 mx-auto" role="alert">
          <strong>@TempData["SuccessMessage"]</strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }

      @if (TempData["InfoMessage"] != null) {
        <div class="alert alert-info alert-dismissible fade show mt-5 w-50 mx-auto" role="alert">
          <strong>@TempData["InfoMessage"]</strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      }
      <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show mt-3"
           role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false);
@await Html.PartialAsync("_ValidationScriptsPartial")
</body>

</html>
